<Window x:Class="Chatbot_POE.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatbot_POE"
        mc:Ignorable="d"
        Title="Quiz" Height="450" Width="800">
    <Grid Margin="30">
        <StackPanel>
            <TextBlock x:Name="QuestionTextBlock" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <RadioButton x:Name="OptionA" GroupName="QuizOptions" Content="Option A" Margin="0,5"/>
            <RadioButton x:Name="OptionB" GroupName="QuizOptions" Content="Option B" Margin="0,5"/>
            <RadioButton x:Name="OptionC" GroupName="QuizOptions" Content="Option C" Margin="0,5"/>
            <RadioButton x:Name="OptionD" GroupName="QuizOptions" Content="Option D" Margin="0,5"/>

            <Button Content="Submit Answer" Width="140" Height="50" Margin="0,20,0,0" Click="SubmitAnswer_Click"/>
            <TextBlock x:Name="FeedbackTextBlock" FontSize="14" FontWeight="SemiBold" Foreground="Green" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
