<Window x:Class="Chatbot_POE.ActivityLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatbot_POE"
        mc:Ignorable="d"
        Title="ActivityLog" Height="450" Width="800">
    <Grid Margin="40">
        <TextBlock Text="User Activity Log" FontSize="20" FontWeight="Bold" Background="LightGray" Margin="0,0,0,20"/>
        <ListBox x:Name="ActivityListBox" Margin="0,40,0,0"/>
        <Button Content="Close" Width="100" Height="30" HorizontalAlignment="center" Background="LightGray" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="Close_Click"/>
    </Grid>
</Window>
